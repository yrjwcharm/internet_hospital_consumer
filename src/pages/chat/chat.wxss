.tui-chat-content {
    width: 100%;
    padding-top: 100rpx;
}

.tui-chatbox {
    border-radius: 10rpx;
    position: relative;
    /*width: 220px;*/
    padding: 12rpx 12rpx;
    font-size: 32rpx;
    color: #000;
    /* text-align: justify; */
