    word-wrap: break-word;
}

.tui-file {
    border-radius: 10rpx;
    position: relative;
    width: 230px;
    padding:20rpx 25rpx 20rpx 20rpx;
    color: #000;
    /* text-align: justify; */
    word-break: break-all;
    word-wrap: break-word;
}

.tui-file::before {
    content: "";
    position: absolute;
    width: 0;
    height: 0;
    top: 20rpx;
    border: 16rpx solid;
}

.file-icon {
    width: 27px;
    height: 36px;
}

.file-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

.file-wrap {
    display: flex;
    flex-direction: column;
}

.file-name {
    font-size: 16px;

}

.file-size {
    color: #666;
    margin-top: 4px;
    font-size: 13px;
}

.tui-chatbox::before {
    content: "";
    position: absolute;
    width: 0;
    height: 0;
    top: 20rpx;
    border: 16rpx solid;
}

.tui-chat-left, .tui-chat-right {
    display: flex;
    align-items: flex-start;
    padding-top: 36rpx;
}

.tui-chat-left {
    margin-left: 25rpx;
}

.tui-chat-right {
    margin-right: 25rpx;
}

