.chating-wrapper {
    height: 100%;
    position: relative;
    /* margin: 70rpx 0 100rpx; */
    box-sizing: border-box;
    /* overflow: hidden; */
    background: #ebedf6;
}

.nav {
    background: #fff;
}

.titlebar {
    display: flex;
    height: 88px;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.mini-title {
    font-size: 32px;
    color: black;
    font-family: PingFangSC-Semibold, PingFang SC;
}

/* 收起键盘热区 */
.fold-keyboad-wrapper {
    position: fixed;
    top: 70rpx;
    width: 100%;
    height: 500rpx;
}

/*历史消息  */
.chating-history {
    position: fixed;
    padding: 0 20rpx;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    box-sizing: border-box;
    border: 1px solid #E7E7E7;
    background-color: #E7E7E7;
    z-index: 1;
    color: #888888;
    font-size: 28rpx;
}

.chating-history-left {
    float: left;
    color: #666;
}

.chating-history-right {
    float: right;
}

/*聊天输入框  */
.chatinput-wrapper {
    width: 100%;
    background-color: #fff;
    /*border: 2rpx solid #eee;*/
    position: fixed;
    bottom: 0;
    z-index: 0;
    left: 0;
}

.chatinput-content {
    padding-left: 32rpx;
    padding-right:32rpx;
    display: flex;
    height: 100rpx;
    flex-direction: row;
    position: relative;
    align-items: center;
    /*height: 100rpx;*/
}

.chatinput-content:after {
   display: block;
   position: absolute;
   left: 0;
   bottom: 0;
   width: 100%;
   content: '';
   border-top: 1px solid rgba(204,204,204,0.4);
   -webkit-transform: scale(0.5);
   transform: scaleY(0.5);
 }


.chatinput-img {
    width: 44rpx;
    height: 44rpx;
    margin-right: 10rpx;
    /*border-radius: 100%;*/
    /*margin: 20rpx 20rpx;*/
    display: inline-block;
}
.more{
  margin-right: 20rpx;
}
