    margin-right: 40px;
}

.tui-chatbox-left::before {
    right: 100%;
    border-color: transparent #fff transparent transparent;
}

.tui-chatbox-right {
    background: #a0d5f3;
    border: 1rpx solid #a0d5f3;
    margin-left: 40px;
}

.tui-chatbox-right1 {
    background: #fff;
    border: 1rpx solid #fff;
    margin-left: 40px;
}

.tui-chatbox-right1::before {
