.list-row-camera{
  display: flex;
  flex-direction: column;
  height: 140px;
  padding-left: 48px;
  padding-right: 48px;
  background: #333;
  justify-content: center;

}
.list-camera{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
  .camera{
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .camera-icon{
    width: 54px;
    height: 44px;
  }
  .camera-text{
    margin-top: 16px;
    font-size: 28px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
  }
  .video{
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .video-icon{
    width: 60px;
    height: 42px;
  }
  .video-text{
    margin-top: 16px;
    font-size: 28px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
  }
  .hangup{
    width: 88px;
    height: 88px;
  }
  .muted{
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .muted-icon{
    width: 46px;
    height: 50px;
  }
  .muted-text{
    margin-top: 16px;
    font-size: 28px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
  }
  .speaker{
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .speaker-icon{
    width: 50px;
    height: 46px;
  }
  .speaker-text{
    margin-top: 16px;
    font-size: 28px;
    font-family: PingFangSC-Regular, PingFang SC;
