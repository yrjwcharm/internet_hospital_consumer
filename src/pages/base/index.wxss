}
.image-sxt{
  width: 64px;
  margin: auto;
  height: 64px;
}
.view-voice{
  display: flex;
}
.image-voice{
  width: 64px;
  margin: auto;
  height: 64px;
}
.view-speaker{
  display: flex;
}
.image-speaker{
  width: 64px;
  margin: auto;
  height: 64px;
}
.view-call{
  /*margin: auto;*/
