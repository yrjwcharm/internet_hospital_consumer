  color: #fff;
}
.img-box {
  z-index: 12;
  position: absolute;
  right: 0;
  bottom: 0;
}
.cover-user-name{
  position: absolute;
  bottom: 0;
  left: 0;
}
.username{
  width: 240px;
  border-radius: 0;
